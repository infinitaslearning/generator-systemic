    "eslint": "^7.19.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "jest-config": "^26.6.3",
    "jest-junit": "^12.0.0",
    "make-manifest": "^1.0.4",
    "supertest": "^6.1.3"
  },
  "dependencies": {
    "on-headers": "^1.0.2",
    "body-parser": "^1.19.0",
    "boom": "^7.3.0",
    "bunyan": "^1.8.15",
    "chalk": "^4.1.0",
    "confabulous": "^1.7.0",
    "cross-env": "^7.0.3",
    "debug": "^4.3.1",
